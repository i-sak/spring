<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.isaac.springbootmybatis.mapper.UserMapper">

<!-- select -->
    <select id="getCountOfUser" resultType="Integer">
        select count(1) from TB_USER;
    </select>

    <select id="getUsers" resultType="hashmap">
        select * from TB_USER;
    </select>


<!--  insert  -->
    <insert id="registerUser" parameterType="hashmap">
        insert into TB_USER(name, age) values (#{name}, #{age})
    </insert>

</mapper>